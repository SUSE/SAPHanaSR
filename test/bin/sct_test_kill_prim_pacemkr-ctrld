set -u
function kill_again
{
    for i in 1 2 3 4 5 6 7 8 9; do
        kill_process "$currPrimary" "hacluster" "pacemaker-controld" "11"
        sleep 1
    done
}
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/bin/sct_test_lib
source .test_properties
currPrimary=$(get_curr_prim "$node01")

echo "==== Kill pacemaker-controld ===="
# TODO signal 9 ?
kill_process "$currPrimary" "hacluster" "pacemaker-controld" "11" & exit
kill_again &
#
