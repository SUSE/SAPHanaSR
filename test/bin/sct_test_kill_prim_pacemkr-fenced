set -u
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/bin/sct_test_lib
source .test_properties
currPrimary=$(get_curr_prim "$node01")

echo "==== Kill pacemaker-fenced ===="
# TODO signal 9 ?  # ssh -o ConnectTimeout=5 ?
kill_process "$currPrimary" "hacluster" "pacemaker-fenced" "11" & exit
#
