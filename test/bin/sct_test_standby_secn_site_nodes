#!/bin/bash
#
# sct_test_standby_secn_site_nodes - set cluster standby on all nodes of secondary site
#
# (c) 2025-2026 SUSE LLC
# Author: F.Herschel, L.Pinne.
# GNU General Public License v2. No warranty.
# http://www.gnu.org/licenses/gpl.html
#
set -u
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/lib/SAPHanaSR-tester/sct_test_lib
source .test_properties
currSecondary=$(sctl_get_curr_secn "${node01}")
currSecnWorker=$(sctl_get_curr_secn_worker "${node01}")

# shellcheck disable=SC2029
sctl_run_crm "${node01}" "resource cleanup $mstResource"
sctl_run_cs_wf_idle "${node01}" "-s 2"

echo "==== SUSE cluster standby on secondary site node ${currSecondary} ===="
# shellcheck disable=SC2029
sctl_run_crm "${currSecondary}" "node standby" &
echo "==== SUSE cluster standby on secondary site node ${currSecnWorker} ===="
sctl_run_crm "${currSecnWorker}" "node standby" &
#
