# http://www.gnu.org/licenses/gpl.html
#
# lib-mig-status: CHECK
# used-in:
#   angi-ScaleOut: kill_prim_pacemakerd
#   - list-end
#
#
set -u
rc=1 # mark fail, by default
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/lib/SAPHanaSR-tester/sct_test_lib
source .test_properties
currPrimWorker=$(sctl_get_curr_prim_worker "$node01")

echo "==== Kill pacemakerd ===="
# TODO signal 9 ?
sctl_kill_process "$currPrimWorker" "root" "pacemakerd" "11" "flags::" ; rc="$?"
exit "$rc"
#
