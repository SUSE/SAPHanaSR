set -u
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/bin/sct_test_lib
source .test_properties
currSecnWorker=$(get_curr_secn_worker "$node01")

echo "==== Kill pacemaker-controld ===="
# TODO signal 9 ?
kill_process "$currSecnWorker" "hacluster" "pacemaker-controld" "11" & exit
