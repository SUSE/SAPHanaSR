set -u
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/bin/sct_test_lib
source .test_properties
currSecondary=$(get_curr_secn "${node01}")
currSecnWorker=$(get_curr_secn_worker "${node01}")

# shellcheck disable=SC2029
run_crm "${node01}" "resource cleanup $mstResource"
run_cs_wf_idle "${node01}" "-s 2"


echo "==== Block network on secondary site node ${currSecondary} ===="
# shellcheck disable=SC2029
run_rcnetwork "${currSecondary}" "stop & exit" &
echo "==== Block network on secondary site node ${currSecnWorker} ===="
run_rcnetwork "${currSecWorker}" "stop & exit" &
#
