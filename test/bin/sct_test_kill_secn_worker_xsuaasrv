#!/bin/bash
#
# sct_test_kill_secn_worker_xsuaasrv - kill xsuaaserver on secondary worker node
#
# (c) 2025 SUSE LLC
# Author: F.Herschel, L.Pinne.
# GNU General Public License v2. No warranty.
# http://www.gnu.org/licenses/gpl.html
#
# used-in:
#   angi-ScaleOut+XSA: kill_secn_worker_xsuaasrvr
#   - list-end
#
set -u
rc=1
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/lib/SAPHanaSR-tester/sct_test_lib
source .test_properties
currSecnWorker=$(sctl_get_curr_secn_worker "$node01")

echo "==== Kill xsuaaserver on $currSecnWorker ===="
# TODO signal 9 ?
sctl_kill_process "$currSecnWorker" "$sidadm" "/hana/shared/$SID/xs/bin/xsuaaserver" "11" "flags:f:"; rc="$?"
#
exit "$rc"
