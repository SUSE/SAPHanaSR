#!/bin/bash
#
# sct_test_freeze_secn_site_nfs - freeze nfs on secondary site
#
# (c) 2025-2026 SUSE LLC
# Author: F.Herschel, L.Pinne.
# GNU General Public License v2. No warranty.
# http://www.gnu.org/licenses/gpl.html
#
set -u
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/lib/SAPHanaSR-tester/sct_test_lib
source .test_properties
currSecondary=$(sctl_get_curr_secn "$node01")
currSecnWorker=$(sctl_get_curr_secn_worker "$node01")

echo "==== Freeze all NFS on $currSecondary ===="
sctl_run_iptables "$currSecondary" '-I OUTPUT -p tcp -m multiport --ports 2049 -j DROP &'
echo "==== Freeze all NFS on $currSecnWorker ===="
sctl_run_iptables "$currSecnWorker" '-I OUTPUT -p tcp -m multiport --ports 2049 -j DROP'
echo "sleep 60s"
sleep 60
#
