set -u
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/bin/sct_test_lib
source .test_properties
currPrimary=$(get_curr_prim)

echo "==== Kill pacemakerd ===="
# TODO signal 9 ?
kill_process "$currPrimary" "root" "pacemakerd" "11" & exit
#
