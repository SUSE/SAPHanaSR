#!/bin/bash
#
# sct_test_restart_cluster - restart cluster, start SAP HANA instances while cluster is down
#
# (c) 2025 SUSE LLC
# Author: F.Herschel, L.Pinne.
# GNU General Public License v2. No warranty.
# http://www.gnu.org/licenses/gpl.html
#
# - cleanup mst-resource
# - stop cluster (including SAP HANA resources)
# - start SAP HANA manually
# - start cluster
#
# expected outcome: cluster running, SAP HANA instances running, SR roles NOT exchanged
#
set -u
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/bin/sct_test_lib
source .test_properties
currPrimary=$(get_curr_prim "$node01")
currSecondary=$(get_curr_secn "$node01")

echo "p=$currPrimary, s=$currSecondary"

sitePrimary=$(get_site "${node01}" "$currPrimary")

echo "p=$currPrimary ($sitePrimary), s=$currSecondary"

# shellcheck disable=SC2029
run_crm "$node01" "resource cleanup $mstResource; cs_wait_for_idle -s 2"

run_crm "$node02" "cluster stop --all"

echo "==== SUSE Cluster Stopped ===="

run_sapcontrol "$node01" 'su - '"$sidadm"' -c "-nr '$instNr' -function StartSystem"'
run_sapcontrol "$node02" 'su - '"$sidadm"' -c "-nr '$instNr' -function StartSystem"'
run_sapcontrol "$node01" 'su - '"$sidadm"' -c "-nr '$instNr' -function WaitforStarted 300 10"'
run_sapcontrol "$node02" 'su - '"$sidadm"' -c "-nr '$instNr' -function WaitforStarted 300 10"'

while true; do
    run_sap_python3 "$currPrimary" 'su - '"$sidadm"' -c "exe/python_support/systemReplicationStatus.py 1>/dev/null"'; rc=$?
    if [[ "$rc" != 15 ]]; then
        sleep 60
    else
        break
    fi
done

echo "==== SAP HANA DBs started ===="

run_crm "$node01" "cluster start --all"
sleep 30
run_crm "$node01" "cluster wait_for_startup 60; cs_wait_for_idle -s 10"
echo "==== SUSE Cluster Started ===="
#
