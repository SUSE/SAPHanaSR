set -u
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/bin/sct_test_lib
source .test_properties
currPrimary=$(get_curr_prim "$node01")

echo "==== Run crm report on $currPrimary ===="

run_crm "$currPrimary" "report -S -f 1d crm_report-test-crmreport && sleep 10; rm crm_report-test-crmreport.*"
#
