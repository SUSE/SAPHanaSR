#!/bin/bash
#
# sct_test_kill_prim_nic - kill primary HANA network interface
#
# (c) 2025 SUSE LLC
# Author: F.Herschel, L.Pinne.
# GNU General Public License v2. No warranty.
# http://www.gnu.org/licenses/gpl.html
#
set -u
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/bin/sct_test_lib
source .test_properties
currPrimary=$(get_curr_prim "$node01")

echo "==== Kill primary HANA network interface ===="

IPR=$( run_crm "$currPrimary" "configure show" |\
        grep primitive.*IPaddr2 | awk '{print $2}' )

# simulate monitor failure
run_crmattr "$currPrimary" "-N '"${currPrimary}"' -n '"fail-count-${IPR}\#monitor_30"' -l reboot -t status -v 1"
run_crmattr "$currPrimary" "-N '"${currPrimary}"' -n '"fail-count-${IPR}\#start_0"' -l reboot -t status -v INFINITY"
#
