#!/bin/bash
#
# sct_test_kill_secn_pacemkr-based - kill pacemaker-based on secondary node
#
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source .test_properties
currSecondary="$(ssh "${node01}" "/usr/bin/SAPHanaSR-showAttr --format=tester" | awk -F'/' '/score="100"/ { print $2 }' )"

echo "==== Kill pacemaker-based ===="
# TODO signal 9 ?
ssh "$currSecondary" 'pgrep -u hacluster -f pacemaker-based; pkill -u hacluster -f pacemaker-based -11 & exit'
sleep 10
ssh -o ConnectTimeout=5 "$currSecondary" 'pgrep -u hacluster -f pacemaker-based'
#
