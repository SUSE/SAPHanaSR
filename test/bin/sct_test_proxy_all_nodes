# http://www.gnu.org/licenses/gpl.html
#
set -u
src=${BASH_SOURCE[0]}
source /usr/lib/SAPHanaSR-tester/sct_test_lib
source .test_properties

echo "==== check proxy user on all nodes ===="
rc=0
for node in $all_nodes
do
    sctl_run_crmnode "$node" "-n" || rc=1
done
exit "$rc"
#
