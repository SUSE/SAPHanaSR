#!/bin/bash
#
# sct_test_kill_prim_worker_ipaddr - kill primary HANA worker XSA IP address once
#
# (c) 2025-2026 SUSE LLC
# Author: F.Herschel, L.Pinne.
# GNU General Public License v2. No warranty.
# http://www.gnu.org/licenses/gpl.html
#
set -u
src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/lib/SAPHanaSR-tester/sct_test_lib
source .test_properties
currPrimWorker=$(sctl_get_curr_prim_worker "$node01")

echo "==== Kill primary HANA worker XSA IP address on $currPrimWorker ===="
# TODO could property ipAddr be used? or get all data by one call
IP=$( sctl_run_crm "$currPrimWorker" "configure show" |\
    grep -A4 primitive.*IPaddr2 | grep params.ip= | awk -F'=' '{print $2}' |\
    awk '{print $1}' )

#
# ip  -br a s secondary
# eth0             UP             192.168.1.54/24
#
IP_BRF=$(sctl_run_ip "$currPrimWorker" "-br a s secondary")
IPNM=${IP_BRF##* }
NIC=${IP_BRF%% *}

sctl_run_ip "$currPrimWorker" "a d ${IPNM} dev ${NIC}"
# TODO sleep twice the monitor interval
echo "sleep 60"
sleep 60
# TODO specify cleanup rsc_ip_
sctl_run_crm "$currPrimWorker" "resource cleanup"
sctl_run_cs_wf_idle "$currPrimWorker" "-s 2"
#
