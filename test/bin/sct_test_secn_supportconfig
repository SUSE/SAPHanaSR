src=${BASH_SOURCE[0]}
full_path=$(readlink -f "$src")
dir_path=$(dirname "$full_path")
source /usr/lib/SAPHanaSR-tester/sct_test_lib
source .test_properties
currSecondary=$(sctl_get_curr_secn "$node01")

echo "==== Run supportconfig on $currSecondary ===="

sctl_run_rm_file "$currSecondary" "-rf /var/log/scc_test_supportconfig*" &&
#sctl_run_supportcfg "$currSecondary" "-c -H1000 -I1000 -X1000 -S30 -xAUDIT,APPARMOR,OCFS2,UP,LIVEPATCH -B test_supportconfig"
sctl_run_supportcfg "$currSecondary" "-c -H1000 -I1000 -X1000 -S30 -xAUDIT,OCFS2,UP,LIVEPATCH -B test_supportconfig"
