{
    "test": "kill_secn_pacemkr-ctrld_fencing",
    "name": "kill pacemaker-controld on secondary node",
    "purpose": [
        "angi",
        "ScaleUp",
        "secondary",
        "kill",
        "cluster",
        "fencing"
    ],
    "start": "prereq10",
    "steps": [
        {
            "step": "prereq10",
            "name": "test prerequisites",
            "next": "step20",
            "loop": 1,
            "wait": 1,
            "post": "shell sct_test_kill_pacemkr-ctrld secn",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp"
        },
        {
            "step": "step20",
            "name": "failure detected + secondary fenced",
            "next": "step30",
            "loop": 120,
            "wait": 2,
            "pSite": "pHSiteUp",
            "pHost": "pHostUp",
            "sSite": [
                "lpt == 10",
                "srr == S",
                "srHook == SFAIL"
            ],
            "sHost": [
                "clone_state is None",
                "roles is None",
                "score is None"
            ]
        },
        {
            "step": "step30",
            "name": "begin recover",
            "next": "final50",
            "loop": 240,
            "wait": 2,
            "pSite": "pSiteUp",
            "pHost": "pHistUp",
            "sSite": [
                "lpt == 10",
                "lss ~ (1|2)",
                "srr == S",
                "srHook ~ (SFAIL|SWAIT)",
                "srPoll ~ (SFAIL|SOK)"
            ],
            "sHost": [
                "clone_state ~ (UNDEFINED|DEMOTED)",
                "roles == master1::worker:",
                "score ~ (-INFINITY|0|-1)"
            ]    
        },
        {
            "step": "final50",
            "name": "end recover",
            "next": "END",
            "loop": 240,
            "wait": 2,
            "post": "cleanup",
            "pSite": "sSiteUp",
            "sSite": "pSiteUp",
            "pHost": "sHostUp",
            "sHost": "pHostUp"
        }
    ]
}
