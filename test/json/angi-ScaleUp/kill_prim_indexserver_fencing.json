            ],
            "sSite": "pSiteUp",
            "sHost": "pHostUp"
        },
        {
            "step": "final60",
            "name": "end recover",
            "next": "END",
            "loop": 300,
            "wait": 2,
            "post": "cleanup",
            "remark": "pXXX and sXXX are now exchanged",
            "pSite": "sSiteUp",
            "sSite": "pSiteUp",
            "pHost": "sHostUp",
            "sHost": "pHostUp"
        }
    ]
