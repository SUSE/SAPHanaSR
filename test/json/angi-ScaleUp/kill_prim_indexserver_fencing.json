            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp"
        },
        {
            "step": "step20",
            "name": "failure detected + primary fenced",
            "next": "step30",
            "loop": 120,
            "wait": 2,
            "pHost": [
                "clone_state is None",
                "role is None",
