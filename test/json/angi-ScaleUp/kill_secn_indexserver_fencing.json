                "srPoll ~ (SFAIL|SOK)"
            ],
            "pHost": [
                "clone_state == PROMOTED",
                "roles == master1:master:worker:master",
                "score == 150"
            ],
            "sHost": [
                "clone_state == DEMOTED",
                "roles == master1::worker:",
                "score ~ (-INFINITY|0)"
            ]
        },
        {
            "step": "step30",
            "name": "pmaster fenced",
            "next": "step40",
            "loop": 300,
            "wait": 2,
            "pHost": [
                "clone_state is None",
                "role is None",
                "score is None"
            ]
        },
        {
            "step": "step40",
            "name": "begin recover",
            "next": "final50",
            "loop": 150,
            "wait": 2,
            "todo": "pHost+sHost to check site-name",
            "pSite": [
                "lss == 4",
                "srr == P",
                "lpt > 1000000000",
                "srHook == PRIM",
                "srPoll == PRIM"
            ],
            "sSite": [
                "lpt == 10",
                "lss == 1",
                "srr == S",
                "srHook == SFAIL",
                "srPoll ~ (SFAIL|SOK)"
            ],
            "pHost": [
                "clone_state == PROMOTED",
                "roles == master1:master:worker:master",
                "score == 150"
            ],
            "sHost": [
                "clone_state == UNDEFINED",
                "roles == master1::worker:",
                "score ~ (-INFINITY|0|-1)"
            ]
        },
        {
            "step": "final50",
            "name": "end recover",
            "next": "END",
            "loop": 300,
            "wait": 2,
            "post": "cleanup",
            "remark": "pXXX and sCCC to be the same as at test begin",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp"
        }
