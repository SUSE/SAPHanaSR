{
    "test": "kill_prim_pacemkr-execd",
    "name": "kill pacemaker-execd on primary node",
    "purpose": [
        "angi",
        "ScaleUp",
        "primary",
        "kill",
        "cluster",
        "onfail"
    ],
    "start": "prereq10",
    "steps": [
        {
            "step": "prereq10",
            "name": "test prerequisites",
            "next": "step20",
            "loop": 1,
            "wait": 1,
            "post": "shell sct_test_kill_prim_pacemkr-execd",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp"
        },
        {
            "step": "step20",
            "name": "failure recovered in background",
            "next": "step30",
            "loop": 180,
            "wait": 1,
            "post": "sleep 90",
            "sSite": "sSiteUp",
            "sHost": "sHostUp",
            "pSite": "pSiteUp",
            "pHost": "pHostUp"
        },
        {
            "step": "step30",
            "name": "end recover (SOK) - or jump alternative (SFAIL)",
            "next": "final40",
            "loop": 10,
            "wait": 2,
            "onfail": "alt110",
            "post": "cleanup",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp"
        },
        {
            "step": "alt110",
            "name": "failure detected - node down secondary gets primary",
            "next": "alt120",
            "loop": 90,
            "wait": 2,
            "sSite": "pSiteUp",
            "sHost": "pHostUp",
            "pHost": [
                "clone_state is None",
                "roles is None"
            ]
        },
        {
            "step": "alt120",
            "name": "takeover completed - SR again in sync",
            "next": "END",
            "loop": 300,
            "wait": 2,
            "post": "cleanup",
            "pSite": "sSiteUp",
            "sSite": "pSiteUp",
            "pHost": "sHostUp",
            "sHost": "pHostUp"
        },
        {
            "step": "final40",
            "name": "end recover",
            "next": "END",
            "loop": 120,
            "wait": 2,
            "post": "cleanup",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp"
        }
    ]
}
