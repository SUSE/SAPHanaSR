            ],
            "pWorker": [
                "clone_state is None",
                "role is None",
                "score is None"
            ]
        },
        {
            "step": "step50",
            "name": "takeover on secondary",
            "next": "step60",
            "loop": 240,
            "sSite": "pSiteUp",
            "sNode": "pNodeUp",
