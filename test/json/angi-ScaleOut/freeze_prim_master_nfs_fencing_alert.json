                "lss == 1",
                "lpt >~ 1000000000:(30|20|10)",
                "srHook ~ (SFAIL|SWAIT)"
            ],
            "pHost": [
                "clone_state == DEMOTED",
                "roles == master1::worker:"
            ],
            "pWorker": [
                "clone_state == DEMOTED",
                "roles == master1::worker:"
            ]
        },
        {
            "step": "final70",
            "name": "end recover",
            "next": "END",
            "loop": 300,
            "wait": 2,
            "post": "cleanup",
            "remark": "pXXX and sXXX are now exchanged",
