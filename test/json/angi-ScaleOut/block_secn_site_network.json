{
    "test": "block_secn_site_network",
    "name": "Block all network on secondary site nodes",
    "purpose": [
        "classic",
        "ScaleOut",
        "block",
        "secondary",
        "node",
        "site",
        "network",
        "fencing"
    ],
    "start": "prereq10",
    "steps": [
        {
            "step": "prereq10",
            "name": "test prerequisites",
            "next": "step20",
            "loop": 1,
            "wait": 1,
            "post": "shell sct_test_block_secn_site_network",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        },
        {
            "step": "step20",
            "name": "failure detected",
            "next": "step30",
            "loop": 90,
            "wait": 2,
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
            "pWorker": "pWorkerUp",
            "sSite": [
                "srr == S",
                "srHook == SFAIL"
            ],
            "sHost": [
                "clone_state is None",
                "score is None",
                "roles is None"
            ],
            "sWorker": [
                "clone_state is None",
                "score is None",
                "roles is None"
            ]
        },
        {
            "step": "step30",
            "name": "nodes back",
            "next": "step40",
            "loop": 180,
            "wait": 2,
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
            "pWorker": "pWorkerUp",
            "sSite": [
                "lpt == 10",
                "lss == 1",
                "srr == S",
                "srHook == SFAIL",
                "srPoll == SFAIL"
            ],
            "sHost": [
                "clone_state ~(WAITING4NODES|DEMOTED)",
                "roles == master1::worker:"
            ],
            "sWorker": [
                "clone_state == DEMOTED",
                "roles == slave::worker:"
            ]
        },
        {
            "step": "step40",
            "name": "begin recover",
            "next": "final50",
            "loop": 120,
            "wait": 2,
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
            "pWorker": "pWorkerUp",
            "sSite": [
                "lpt == 10",
                "lss ~ (1|2)",
                "srr == S",
                "srHook ~ (SFAIL|SWAIT)"
            ],
            "sHost": [
                "clone_state ~ (WAITING4NODES|DEMOTED)",
                "roles == master1::worker:",
                "score ~ (-INFINITY|-32300|0)"
            ],
            "sWorker": [
                "clone_state ~ (UNDEFINED|DEMOTED)",
                "roles == slave::worker:",
                "score ~ (-INFINITY|-22200)"
            ]
        },
        {
            "step": "final50",
            "name": "end recover",
            "next": "END",
            "loop": 300,
            "wait": 2,
            "post": "cleanup",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        }
    ]
}
