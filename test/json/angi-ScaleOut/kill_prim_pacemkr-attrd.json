{
    "test": "kill_prim_pacemkr-attrd",
    "name": "kill pacemaker-attrd on primary master node",
    "purpose": [
        "angi",
        "ScaleOu",
        "primary",
        "master",
        "kill",
        "cluster"
    ],
    "start": "prereq10",
    "steps": [
        {
            "step": "prereq10",
            "name": "test prerequisites",
            "next": "step20",
            "loop": 1,
            "wait": 1,
            "post": "shell sct_test_kill_pacemkr-attrd prim",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        },
        {
            "step": "step20",
            "name": "failure detected - expect node to stay (SOK)",
            "next": "step40",
            "loop": 180,
            "wait": 1,
            "post": "sleep 90",
            "sSite": "sSiteUp",
            "sHost": "sHostUp",
            "sWorker": "sWorkerUp",
            "pSite": "pSiteUp",
            "pHost": [
                "clone_state is None",
                "roles is None"
            ]
        },
        {
            "step": "final40",
            "name": "end recover",
            "next": "END",
            "loop": 120,
            "wait": 2,
            "post": "cleanup",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        }
    ]
}
