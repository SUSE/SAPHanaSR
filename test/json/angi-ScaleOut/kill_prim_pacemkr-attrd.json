{
    "test": "kill_prim_pacemkr-attrd",
    "name": "Kill primary master pacemaker-attrd",
    "purpose": [
        "angi",
        "ScaleOut",
        "kill",
        "primary",
        "cluster",
        "master",
        "takeover",
        "fencing"
    ],
    "start": "prereq10",
    "steps": [
        {
            "step": "prereq10",
            "name": "test prerequisites",
            "next": "step20",
            "loop": 1,
            "wait": 1,
            "post": "shell sct_test_kill_pacemkr-attrd prim",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        },
        {
            "step": "step20",
            "name": "pmaster fenced + failure detected",
            "next": "step30",
            "loop": 120,
            "wait": 2,
            "pSite": [
                "srr == P",
	    	"lss ~ (1|4)"
            ],
             "pHost": [
                "clone_state is None",
                "role is None",
                "score is None"
            ],
            "pWorker": "pWorkerUp",
	        "sSite": "sSiteUp",
	        "sHost": "sHostUp",
	        "sWorker": "sWorkerUp"
        },
        {
            "step": "step30",
            "name": "takeover on secondary - or jump to alternative (local restart)",
            "next": "step40",
	        "onfail": "alt120",
            "loop": 240,
            "wait": 2,
            "sSite": "pSiteUp",
            "sHost": "pHostUp",
            "sWorker": "pWorkerUp"
        },
        {
            "step": "step40",
            "name": "begin recover new secondary",
            "next": "final60",
            "loop": 240,
            "wait": 2,
            "pSite": [
                "lss ~ (1|2)",
                "srr ~ (P|S)",
                "lpt >~ 1000000000:(30|20|10)",
                "srHook ~ (PRIM|SWAIT|SREG)",
                "srPoll ~ (PRIM|SFAIL)"
            ],
            "pHost": [
                "clone_state ~ (UNDEFINED|DEMOTED)",
                "roles == master1::worker:"
            ],
            "pWorker": [
                "roles ~ (:::|slave::worker:|slave:slave:worker:slave)"
            ],
            "sSite": "pSiteUp",
            "sHost": "pHostUp",
            "sWorker": "pWorkerUp"
        },
        {
            "step": "final60",
            "name": "end recover (takeover)",
            "next": "END",
            "loop": 300,
            "wait": 2,
            "post": "cleanup",
            "pSite": "sSiteUp",
            "sSite": "pSiteUp",
            "pHost": "sHostUp",
            "sHost": "pHostUp",
            "pWorker": "sWorkerUp",
            "sWorker": "pWorkerUp"
        },
	    {
	        "step": "alt110",
	        "name": "recover primary (local restart)",
	        "next": "alt120",
	        "loop": "240",
	        "wait": "2",
            "sHost": "sHostUp",
            "sWorker": "sWorkerUp",
	        "pSite": [
		        "srr == P"
	        ],
	        "pHost": [
		        "clone_state ~ (UNDEFINED|DEMOTED)",
		        "roles ~ (master::worker:|master1:master:worker:master)"
	        ],
	        "pWorker": [
		        "clone_state ~ (UNDEFINED|DEMOTED)",
		        "roles ~ (slave::worker:|slave:slave:worker:slave)"
	        ]
	    },
        {
            "step": "alt120",
            "name": "end recover (local restart)",
            "next": "END",
            "loop": 300,
            "wait": 2,
            "post": "cleanup",
            "pSite": "sSiteUp",
            "sSite": "pSiteUp",
            "pHost": "sHostUp",
            "sHost": "pHostUp",
            "pWorker": "sWorkerUp",
            "sWorker": "pWorkerUp"
        }
    ]
}
