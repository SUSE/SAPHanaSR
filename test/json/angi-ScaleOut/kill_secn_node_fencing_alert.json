                "lpt == 10",
                "lss == 1",
                "srr == S",
                "srHook == SFAIL"
            ],
            "sWorker": [
                "clone_state is None",
                "roles is None",
                "score is None"
            ]
        },
        {
            "step": "step40",
            "name": "begin recover",
            "next": "final50",
            "loop": 300,
            "wait": 2,
            "todo": "pHost+sHost to check site-name",
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
            "pWorker": "pWorkerUp",
            "sSite": [
                "lpt == 10",
                "lss ~ (1|2)",
                "srr == S",
                "srHook ~ (SFAIL|SWAIT)"
            ],
            "sHost": [
                "clone_state == DEMOTED",
                "roles == master1::worker:"
            ],
            "sWorker": [
                "clone_state == DEMOTED",
                "roles == slave::worker:"
            ]
        },
        {
            "step": "final50",
            "name": "end recover",
            "next": "END",
            "loop": 300,
            "wait": 2,
            "post": "cleanup",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
