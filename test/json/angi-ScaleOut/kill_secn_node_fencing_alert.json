            "sHost": [
                "clone_state is None",
                "roles is None",
                "score is None"
            ],
            "sWorker": [
                "roles ~ (slave:slave:worker:slave|slave::worker:)"
            ]
        },
        {
            "step": "step30",
            "name": "sworker fenced",
            "next": "step40",
            "loop": 240,
            "wait": 2,
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
