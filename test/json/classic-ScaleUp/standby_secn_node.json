            "next": "final40",
            "loop": 120,
            "wait": 2,
            "todo": "pHost+sHost to check site-name",
            "pSite": [
                "srHook == PRIM"
            ],
            "sSite": [
                "srHook == SWAIT"
            ],
            "pHost": [
                "lpt > 1000000000" ,
                "clone_state == PROMOTED" ,
                "roles == 4:P:master1:master:worker:master" ,
                "sync_state == PRIM" ,
