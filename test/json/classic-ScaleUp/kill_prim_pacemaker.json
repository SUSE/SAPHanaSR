            "name": "begin recover",
            "next": "final40",
            "loop": 300,
            "wait": 2,
            "todo": "pHost+sHost to check site-name",
            "sSite": "pSiteUp",
            "sHost": "pHostUp",
            "pSite": [
                "srHook == PRIM"
            ],
            "pHost": [
                "clone_state ~ (DEMOTED|UNDEFINED)",
                "lpa_@@sid@@_lpt > 1000000000"
            ]
        },
        {
            "step": "final40",
            "name": "end recover",
            "next": "END",
            "loop": 240,
            "wait": 2,
