{
    "test": "block_prim_site_network",
    "name": "Block all network on primary site nodes",
    "purpose": [
        "classic",
        "ScaleOut",
        "block",
        "primary",
        "node",
        "site",
        "network",
        "takeover",
        "fencing"
    ],
    "start": "prereq10",
    "steps": [
        {
            "step": "prereq10",
            "name": "test prerequisites",
            "next": "step20",
            "loop": 1,
            "wait": 1,
            "post": "shell sct_test_block_prim_site_network",
            "global": "sync_state_sok",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        },
        {
            "step": "step20",
            "name": "failure detected + nodes fenced",
            "next": "step30",
            "loop": 90,
            "wait": 2,
            "global": "sync_state_sok",
            "sSite": "sSiteUp",
            "sHost": "sHostUp",
            "sWorker": "sWorkerUp",
            "pSite": [
                "srr == P",
                "srHook == PRIM"
            ],
            "pHost": [
                "clone_state is None",
                "score is None",
                "roles is None"
            ],
            "pWorker": [
                "clone_state is None",
                "score is None",
                "roles is None"
            ]
        },
        {
            "step": "step30",
            "name": "takeover on secondary",
            "next": "step40",
            "loop": 240,
            "wait": 2,
            "sSite": "pSiteUp",
            "sHost": "pHostUp",
            "sWorker": "pWorkerUp"
        },
        {
            "step": "step40",
            "name": "begin recover new secondary",
            "next": "final50",
            "loop": 240,
            "wait": 2,
            "pSite": [
                "lss ~ (1|2)",
                "srr ~ (P|S)",
                "lpt is Any",
                "srHook ~ (PRIM|SWAIT|SREF)"
            ],
            "pHost": [
                "clone_state ~ (UNDEFINED|DEMOTED)",
                "roles == master1::worker:",
                "srah == R"
            ],
            "pWorker": [
                "clone_state ~ (UNDEFINED|DEMOTED)",
                "roles == slave::worker:"
            ],
            "sSite": "pSiteUp",
            "sHost": "pHostUp",
            "sWorker": "pWorkerUp"
        },
        {
            "step": "final50",
            "name": "end recover",
            "next": "END",
            "loop": 300,
            "wait": 2,
            "post": "cleanup",
            "pSite": "sSiteUp",
            "pHost": "sHostUp",
            "pWorker": "sWorkerUp",
            "sSite": "pSiteUp",
            "sHost": "pHostUp",
            "sWorker": "pWorkerUp"
        }
    ]
}
