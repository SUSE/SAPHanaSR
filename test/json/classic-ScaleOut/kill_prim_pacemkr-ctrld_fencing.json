{
    "test": "kill_prim_pacemkr-ctrld",
    "name": "kill pacemaker-controld on primary master node",
    "purpose": [
        "classic",
        "ScaleOut",
        "primary",
        "master",
        "kill",
        "fencing",
        "cluster",
        "takeover"
    ],
    "start": "prereq10",
    "steps": [
        {
            "step": "prereq10",
            "name": "test prerequisites",
            "next": "step20",
            "loop": 1,
            "wait": 1,
            "post": "shell sct_test_kill_prim_pacemkr-ctrld",
            "global": "sync_state_sok",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        },
        {
            "step": "step20",
            "name": "failure detected + pmaster fenced",
            "next": "step30",
            "loop": 90,
            "wait": 2,
            "sSite": "sSiteUp",
            "sHost": "sHostUp",
            "sWorker": "sWorkerUp",
            "pSite": [
                "srr == P",
                "srHook == PRIM"
            ],
            "pHost": [
                "clone_state is None",
                "roles is None",
                "score is None"
            ],
            "pWorker": [
               "clone_state == DEMOTED",
               "roles ~ slave:"
            ]
        },
        {
            "step": "step30",
            "name": "begin recover",
            "next": "final40",
            "todo": "split this step into two: 30=takeover and 40=begin recover"
            "loop": 300,
            "wait": 2,
            "global": "sync_state_sok_or_sfail",
            "pSite": [
                "lss ~ (1|2)",
                "srr ~ (P|S)",
                "lpt >~ 1000000000:(30|20|10)",
                "srHook ~ (PRIM|SWAIT|SREG)"
            ],
            "sSite": [
                "lpt >~ 1000000000:(30)",
                "lss == 4",
                "srr ~ (S|P)",
                "srHook == PRIM"
            ],
            "pHost": [
                "clone_state ~ (UNDEFINED|DEMOTED|WAITING4NODES)",
                "roles == master1::worker:"
            ],
            "sHost": [
                "clone_state ~ (DEMOTED|PROMOTED)",
                "roles == master1:master:worker:master",
                "score ~ (100|145|150)"
            ]
        },
        {
            "step": "final40",
            "name": "end recover",
            "next": "END",
            "loop": 180,
            "wait": 2,
            "global": "sync_state_sok",
            "post": "cleanup",
            "pSite": "sSiteUp",
            "sSite": "pSiteUp",
            "pHost": "sHostUp",
            "sHost": "pHostUp",
            "pWorker": "sWorkerUp",
            "sWorker": "pWorkerUp"
        }
    ]
}
