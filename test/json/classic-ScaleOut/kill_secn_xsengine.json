{
    "test": "kill_secn_xsengine",
    "name": "Kill secondary master xsengine",
    "purpose": [
        "classic",
        "ScaleOut",
        "secondary",
        "kill",
        "hana",
        "master",
        "degraded"
    ],
    "start": "prereq10",
    "steps": [
        {
            "step": "prereq10",
            "name": "test prerequisites",
            "next": "step20",
            "loop": 1,
            "wait": 1,
            "post": "kill_secn_xsengine",
            "global": "sync_state_sok",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        },
        {
            "step": "step20",
            "name": "failure detected",
            "next": "step30",
            "loop": 60,
            "wait": 2,
            "post": "sleep 10",
            "global": "sync_state_sok_or_sfail",
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
            "pWorker": "pWorkerUp",
            "sSite": [
                "lpt ~ (10|30)",
                "lss ~ (2|4)",
                "srr == S",
                "srHook == SFAIL"
            ],
            "sHost": [
                "clone_state == DEMOTED",
                "roles ~ master1:"
            ],
            "sWorker": [
                "clone_state == DEMOTED",
                "roles ~ slave:"
            ]
        },
        {
            "step": "step30",
            "name": "begin recover",
            "next": "final40",
            "loop": 120,
            "wait": 2,
            "global": "sync_state_sok_or_sfail",
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
            "pWorker": "pWorkerUp",
            "sSite": [
                "lpt ~ (10|30)",
                "lss ~ (2|4)",
                "srr == S",
                "srHook == SOK"
            ],
            "sHost": [
                "clone_state == DEMOTED",
                "roles ~ master1:master:worker:master",
                "score ~ (-INFINITY|0)"
            ],
            "sWorker": [
                "clone_state == DEMOTED",
                "roles ~ slave:slave:worker:slave",
                "score ~ (-INFINITY|-22200|-12200)"
            ]
        },
        {
            "step": "final40",
            "name": "end recover",
            "next": "END",
            "loop": 120,
            "wait": 2,
            "post": "cleanup",
            "global": "sync_state_sok",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        }
    ]
}
