{
    "test": "block_network_secn_site",
    "name": "Block all network on secondary site nodes",
    "purpose": [
        "classic",
        "ScaleOut",
        "block",
        "secondary",
        "node",
        "site",
        "network",
        "fencing"
    ],
    "start": "prereq10",
    "steps": [
        {
            "step": "prereq10",
            "name": "test prerequisites",
            "next": "step20",
            "loop": 1,
            "wait": 1,
            "post": "shell sct_test_block_network_secn_site",
            "global": "sync_state_sok",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        },
        {
            "step": "step20",
            "name": "failure detected",
            "next": "step30",
            "loop": 120,
            "wait": 2,
            "global": "sync_state_sfail",
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
            "pWorker": "pWorkerUp", 
            "todo": "fix sSite, sHost, sWorker",
            "sSite": [
                "lpt == 10",
                "lss == 1",
                "srr == S",
                "srHook == SFAIL"
            ]
        },
        {
            "step": "step30",
            "name": "begin recover",
            "next": "final40",
            "loop": 120,
            "wait": 2,
            "todo": "pHost+sHost to check site-name",
            "global": "sync_state_sok_or_sfail",
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
            "pWorker": "pWorkerUp",
            "todo": "fix sSite, sHost, sWorker",
            "sSite": [
                "lpt == 10",
                "lss ~ (1|2)",
                "srr == S",
                "srHook ~ (SFAIL|SWAIT)"
            ],
            "sHost": [
                "clone_state ~ (UNDEFINED|DEMOTED)",
                "roles == master1::worker:",
                "score ~ (-INFINITY|0|-1)"
            ]
        },
        {
            "step": "final40",
            "name": "end recover",
            "next": "END",
            "loop": 120,
            "wait": 2,
            "post": "cleanup",
            "global": "sync_state_sok",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        }
    ]
}
