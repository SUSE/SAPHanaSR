{
    "test": "kill_secn_pacemkr-ctrld",
    "name": "kill pacemaker-controld on secondary master node",
    "purpose": [
        "classic",
        "ScaleOut",
        "secondary",
        "master",
        "kill",
        "fencing",
        "cluster"
    ],
    "start": "prereq10",
    "steps": [
        {
            "step": "prereq10",
            "name": "test prerequisites",
            "next": "step20",
            "loop": 1,
            "wait": 1,
            "post": "shell sct_test_kill_secn_pacemkr-ctrld",
            "global": "sync_state_sok",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        },
        {
            "step": "step20",
            "name": "failure detected + smaster fenced",
            "next": "step30",
            "loop": 90,
            "wait": 2,
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
            "pWorker": "pWorkerUp",
            "sSite": [
                "srHook == SFAIL",
                "srr == S"
            ],
            "sHost": [
                "clone_state is None",
                "roles is None",
                "score is None"
            ],
            "sWorker": [
               "clone_state == DEMOTED",
               "roles ~ slave:"
            ]
        },
        {
            "step": "step30",
            "name": "sworker stopped + smaster rebooted",
            "next": "step40",
            "loop": 180,
            "wait": 2,
            "global": "sync_state_sfail",
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
            "pWorker": "pWorkerUp",
            "sSite": [
                "srHook == SFAIL",
                "lpt == 10",
                "lss ~ (1|2)",
                "srr == S"
            ],
            "sHost": [
                "clone_state ~ (UNDEFINED|DEMOTED)",
                "roles == master1::worker:"
            ],
            "sWorker": [
                "clone_state ~ (UNDEFINED|DEMOTED)",
                "roles == slave::worker:"
            ]
        },
        {
            "step": "step40",
            "name": "begin recover",
            "next": "final50",
            "loop": 120,
            "wait": 2,
            "global": "sync_state_sfail",
            "pSite": "pSiteUp",
            "pHost": "pHostUp",
            "pWorker": "pWorkerUp",
            "sSite": [
                "srHook ~ (SFAIL|SWAIT|SOK)",
                "lpt == 10",
                "lss ~ (2|4)",
                "srr == S"
            ],
            "sHost": [
                "clone_state ~ (UNDEFINED|DEMOTED)",
                "roles == master1:master:worker:master",
                "score ~ (-INFINITY|0)"
            ],
            "sWorker": [
                "clone_state ~ (UNDEFINED|DEMOTED)",
                "roles == slave:slave:worker:slave",
                "score ~ (-INFINITY|-22200)"
            ]
        },
        {
            "step": "final50",
            "name": "end recover",
            "next": "END",
            "loop": 180,
            "wait": 2,
            "post": "cleanup",
            "global": "sync_state_sok",
            "pSite": "pSiteUp",
            "sSite": "sSiteUp",
            "pHost": "pHostUp",
            "sHost": "sHostUp",
            "pWorker": "pWorkerUp",
            "sWorker": "sWorkerUp"
        }
    ]
}
